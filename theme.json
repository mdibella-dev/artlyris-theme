{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#FFFFFF"
                },
                {
                    "name": "Blue",
                    "slug": "blue",
                    "color": "#74A0B6"
                },
                {
                    "name": "Dark Blue",
                    "slug": "dark-blue",
                    "color": "#28698A"
                },
                {
                    "name": "Pale Blue",
                    "slug": "pale-blue",
                    "color": "#C8DAE4"
                },
                {
                    "name": "Very Pale Blue",
                    "slug": "very-pale-blue",
                    "color": "HSL(170,35%,95%)"
                },
                {
                    "name": "Pale Gray",
                    "slug": "pale-gray",
                    "color": "HSL(170,9.4%,87.5%)"
                },
                {
                    "name": "Pale Dark Gray",
                    "slug": "pale-dark-gray",
                    "color": "HSL(170,9.4%,77.5%)"
                },
                {
                    "name": "Brown",
                    "slug": "brown",
                    "color": "HSL(33.5,30.2%,50%)"
                },
                {
                    "name": "Pale Brown",
                    "slug": "pale-brown",
                    "color": "HSL(33.5,30.2%,80%)"
                }
            ],
            "gradients": [],
            "duotone": [],
            "defaultPalette" : false,
            "defaultGradients": false,
            "customGradient": false,
            "customDuotone": false
        },
        "layout": {
            "contentSize": "1300px"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true,
            "spacingScale": {
                "steps": 0
            },
            "spacingSizes": [
                {
                    "size": "clamp(1.5rem, 5vw, 2rem)",
                    "slug": "30",
                    "name": "30"
                },
                {
                    "size": "clamp(1.8rem, 1.8rem + ((1vw - 0.48rem) * 2.885), 3rem)",
                    "slug": "40",
                    "name": "40"
                },
                {
                    "size": "clamp(2.5rem, 8vw, 4.5rem)",
                    "slug": "50",
                    "name": "50"
                },
                {
                    "size": "clamp(3.75rem, 10vw, 7rem)",
                    "slug": "60",
                    "name": "60"
                },
                {
                    "size": "clamp(5rem, 5.25rem + ((1vw - 0.48rem) * 9.096), 8rem)",
                    "slug": "70",
                    "name": "70"
                },
                {
                    "size": "clamp(7rem, 14vw, 11rem)",
                    "slug": "80",
                    "name": "80"
                }
            ]
        },
        "useRootPaddingAwareAlignments": true,
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "\"Cinzel\", \"Time New Roman\", Times, serif",
                    "fontFace": [
                        {
                            "fontFamily": "Cinzel",
                            "fontWeight": "300 900",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/Cinzel-VariableFont_wght.ttf"
                            ]
                        }
                    ],
                    "name": "Cinzel",
                    "slug": "cinzel"
                },
                {
                    "fontFamily": "\"Cormorant\", \"Time New Roman\", Times, serif",
                    "fontFace": [
                        {
                            "fontFamily": "Cormorant",
                            "fontWeight": "300 700",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/Cormorant-VariableFont_wght.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Cormorant",
                            "fontWeight": "300 800",
                            "fontStyle": "italic",
                            "src": [
                                "file:./assets/fonts/Cormorant-Italic-VariableFont_wght.ttf"
                            ]
                        }
                    ],
                    "name": "Cormorant",
                    "slug": "cormorant"
                },
                {
                    "fontFamily": "\"Open Sans\", Helvetica, Arial, sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Open Sans",
                            "fontWeight": "300 800",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/OpenSans-VariableFont_wdth,wght.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Open Sans",
                            "fontWeight": "300 800",
                            "fontStyle": "italic",
                            "src": [
                                "file:./assets/fonts/OpenSans-Italic-VariableFont_wdth,wght.ttf"
                            ]
                        }
                    ],
                    "name": "Open Sans",
                    "slug": "open-sans"
                }
            ],
            "fontSizes": [
                {
                    "size": "0.875rem",
                    "fluid": {
                        "min": "0.875rem",
                        "max": "1rem"
                    },
                    "slug": "small",
                    "name": "Small"
                },
                {
                    "size": "1.0625em",
                    "fluid": {
                        "min": "1rem",
                        "max": "1.1875rem"
                    },
                    "slug": "medium",
                    "name": "Medium"
                },
                {
                    "size": "1.375rem",
                    "fluid": {
                        "min": "1.375rem",
                        "max": "1.625rem"
                    },
                    "slug": "large",
                    "name": "Large"
                },
                {
                    "size": "2rem",
                    "fluid": {
                        "min": "2rem",
                        "max": "2.625rem"
                    },
                    "slug": "x-large",
                    "name": "X-large"
                }
            ],
            "fontWeight": true,
            "fontStyle": true,
            "letterSpacing": true,
            "textTransform": true,
            "textDecoration": false,
            "dropCap": false
        },
        "custom": {
           "main": {
               "padding-top":"100px"
           },
           "color": {
               "background": "var(--wp--preset--color--pale-gray)",
               "primary": "var(--wp--preset--color--dark-blue)"
           }
       }
    },
    "styles": {
        "color": {
            "background": "var(--wp--custom--color--background)",
            "text": "var(--wp--custom--color--primary)"
        },
        "typography": {
            "fontSize": "1.5rem",
            "fontFamily": "var(--wp--preset--font-family--cormorant)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.5"
        },
        "spacing": {
            "padding": {
                "top": "0",
                "right": "var(--wp--preset--spacing--40)",
                "bottom": "0",
                "left": "var(--wp--preset--spacing--40)"
            }
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--cinzel)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                }
            },
            "link":{
                "typography": {
                    "textDecoration": "none"
                },
                "color": {
                    "text": "var(--wp--preset--color--brown)"
                },
                "outline": "none",
                ":hover":{
                    "color": {
                        "text": "var(--wp--preset--color--dark-blue)"
                    }
                }
            }
        },
        "blocks": {
            "core/columns": {
                "spacing": {
                    "blockGap": "true"
                }
            },
            "core/post-title": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "var(--wp--preset--spacing--50)"
                    }
                },
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)"
                }
            },
            "core/quote": {
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--40)",
                        "bottom": "var(--wp--preset--spacing--40)"
                    }
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--open-sans)",
                    "fontStyle": "italic"
                }
            },
            "core/post-featured-image": {
                "border": {
                    "radius": "4px"
                }
            }
        }
    }
}

{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#ffffff"
                },
                {
                    "name": "Blue",
                    "slug": "blue",
                    "color": "#74a0b6"
                },
                {
                    "name": "Dark Blue",
                    "slug": "dark-blue",
                    "color": "#28698A"
                }
            ],
            "gradients": [],
            "duotone": [],
            "defaultPalette" : false,
            "defaultGradients": false,
            "customGradient": false,
            "customDuotone": false
        },
        "layout": {
            "contentSize": "1000px",
            "wideSize": "1280px"
        },
        "useRootPaddingAwareAlignments": true,
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "\"Source Serif\", \"Time New Roman\", Times, serif",
                    "fontFace": [
                        {
                            "fontFamily": "Source Serif",
                            "fontWeight": "200 900",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/SourceSerif4-VariableFont_opsz,wght.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Source Serif",
                            "fontWeight": "200 900",
                            "fontStyle": "italic",
                            "src": [
                                "file:./assets/fonts/SourceSerif4-Italic-VariableFont_opsz,wght.ttf"
                            ]
                        }
                    ],
                    "name": "Source Serif Pro",
                    "slug": "source-serif-pro"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--blue)",
            "text": "var(--wp--preset--color--dark-blue)"
        },
        "typography": {
            "fontSize": "1.5rem",
            "fontFamily": "var(--wp--preset--font-family--source-serif-pro)",
            "lineHeight": "1.5"
        }
    }
}

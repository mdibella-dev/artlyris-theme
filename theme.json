{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#ffffff"
                },
                {
                    "name": "Blue",
                    "slug": "blue",
                    "color": "#74A0B6"
                },
                {
                    "name": "Dark Blue",
                    "slug": "dark-blue",
                    "color": "#28698A"
                },
                {
                    "name": "Pale Blue",
                    "slug": "pale-blue",
                    "color": "#C8DAE4"
                }
            ],
            "gradients": [],
            "duotone": [],
            "defaultPalette" : false,
            "defaultGradients": false,
            "customGradient": false,
            "customDuotone": false
        },
        "layout": {
            "contentSize": "1000px"
        },
        "useRootPaddingAwareAlignments": true,
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "\"Cinzel\", \"Time New Roman\", Times, serif",
                    "fontFace": [
                        {
                            "fontFamily": "Cinzel",
                            "fontWeight": "300 900",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/Cinzel-VariableFont_wght.ttf"
                            ]
                        }
                    ],
                    "name": "Cinzel",
                    "slug": "cinzel"
                },
                {
                    "fontFamily": "\"Cormorant\", \"Time New Roman\", Times, serif",
                    "fontFace": [
                        {
                            "fontFamily": "Cormorant",
                            "fontWeight": "300 700",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/Cormorant-VariableFont_wght.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Cormorant",
                            "fontWeight": "300 800",
                            "fontStyle": "italic",
                            "src": [
                                "file:./assets/fonts/Cormorant-Italic-VariableFont_wght.ttf"
                            ]
                        }
                    ],
                    "name": "Cormorant",
                    "slug": "cormorant"
                },
                {
                    "fontFamily": "\"Open Sans\", Helvetica, Arial, sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Open Sans",
                            "fontWeight": "300 800",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/OpenSans-VariableFont_wdth,wght.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Open Sans",
                            "fontWeight": "300 800",
                            "fontStyle": "italic",
                            "src": [
                                "file:./assets/fonts/OpenSans-Italic-VariableFont_wdth,wght.ttf"
                            ]
                        }
                    ],
                    "name": "Open Sans",
                    "slug": "open-sans"
                }
            ],
            "fontSizes": [
                {
                    "size": "0.875rem",
                    "fluid": {
                        "min": "0.875rem",
                        "max": "1rem"
                    },
                    "slug": "small",
                    "name": "Small"
                },
                {
                    "size": "1rem",
                    "fluid": {
                        "min": "1rem",
                        "max": "1.25rem"
                    },
                    "slug": "medium",
                    "name": "Medium"
                },
                {
                    "size": "1.375rem",
                    "fluid": {
                        "min": "1.375rem",
                        "max": "1.625rem"
                    },
                    "slug": "large",
                    "name": "Large"
                },
                {
                    "size": "2rem",
                    "fluid": {
                        "min": "2rem",
                        "max": "2.625rem"
                    },
                    "slug": "x-large",
                    "name": "X-large"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--blue)",
            "text": "var(--wp--preset--color--dark-blue)"
        },
        "typography": {
            "fontSize": "1.5rem",
            "fontFamily": "var(--wp--preset--font-family--cormorant)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.5"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--cinzel)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                }
            }
        }
    }
}

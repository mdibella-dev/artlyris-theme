{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#ffffff"
                },
                {
                    "name": "Blue",
                    "slug": "blue",
                    "color": "#74A0B6"
                },
                {
                    "name": "Dark Blue",
                    "slug": "dark-blue",
                    "color": "#28698A"
                },
                {
                    "name": "Pale Blue",
                    "slug": "pale-blue",
                    "color": "#C8DAE4"
                }
            ],
            "gradients": [],
            "duotone": [],
            "defaultPalette" : false,
            "defaultGradients": false,
            "customGradient": false,
            "customDuotone": false
        },
        "layout": {
            "contentSize": "1000px"
        },
        "useRootPaddingAwareAlignments": true,
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "\"Source Serif\", \"Time New Roman\", Times, serif",
                    "fontFace": [
                        {
                            "fontFamily": "Source Serif",
                            "fontWeight": "200 900",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/SourceSerif4-VariableFont_opsz,wght.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Source Serif",
                            "fontWeight": "200 900",
                            "fontStyle": "italic",
                            "src": [
                                "file:./assets/fonts/SourceSerif4-Italic-VariableFont_opsz,wght.ttf"
                            ]
                        }
                    ],
                    "name": "Source Serif",
                    "slug": "source-serif"
                },
                {
                    "fontFamily": "\"Source Sans\", Helvetica, Arial, sans-serif",
                    "fontFace": [
                        {
                            "fontFamily": "Source Sans",
                            "fontWeight": "200 900",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/SourceSans3-VariableFont_opsz,wght.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Source Sans",
                            "fontWeight": "200 900",
                            "fontStyle": "italic",
                            "src": [
                                "file:./assets/fonts/SourceSans3-Italic-VariableFont_opsz,wght.ttf"
                            ]
                        }
                    ],
                    "name": "Source Sans",
                    "slug": "source-sans"
                }
            ],
            "fontSizes": [
                {
                    "size": "0.875rem",
                    "fluid": {
                        "min": "0.875rem",
                        "max": "1rem"
                    },
                    "slug": "small",
                    "name": "Small"
                },
                {
                    "size": "1rem",
                    "fluid": {
                        "min": "1rem",
                        "max": "1.25rem"
                    },
                    "slug": "normal",
                    "name": "Normal"
                },
                {
                    "size": "1.375rem",
                    "fluid": {
                        "min": "1.375rem",
                        "max": "1.625rem"
                    },
                    "slug": "medium",
                    "name": "Medium"
                },
                {
                    "size": "2rem",
                    "fluid": {
                        "min": "2rem",
                        "max": "2.625rem"
                    },
                    "slug": "large",
                    "name": "Large"
                },
                {
                    "size": "3rem",
                    "fluid": {
                        "min": "3rem",
                        "max": "4rem"
                    },
                    "slug": "x-large",
                    "name": "X-large"
                }
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--blue)",
            "text": "var(--wp--preset--color--dark-blue)"
        },
        "typography": {
            "fontSize": "1.5rem",
            "fontFamily": "var(--wp--preset--font-family--source-serif)",
            "fontSize": "var(--wp--preset--font-size--normal)",
            "lineHeight": "1.5"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--source-sans)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                }
            }
        }
    }
}
